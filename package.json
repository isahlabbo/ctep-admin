{
  "name": "exam-suite",
  "version": "1.0.0",
  "description": "Offline exam client/admin (Electron)",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron .",
    "dist": "electron-builder --publish never"
  },
  "build": {
    "appId": "com.yourorg.examsuite",
    "productName": "ExamSuite",
    "files": [
      "src/**/*",
      "assets/**/*",
      "package.json"
    ],
    "extraResources": [
      {
        "from": "assets/",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": ["nsis"]
    },
    "linux": {
      "target": ["AppImage"]
    },
    "mac": {
      "target": ["dmg"]
    }
  },
  "dependencies": {
    "better-sqlite3": "^8.1.0",
    "electron-is-dev": "^2.0.0"
  },
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.6.0"
  }
}
